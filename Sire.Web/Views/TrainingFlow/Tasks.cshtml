@model IEnumerable<Sire.Data.Dto.Training.TraningResponseDto>
@{
    string trainingAttended = Model != null ? ((Model.Count() > 0) ? "form-group btn-default float-right" : "form-group btn-success float-right") : "form-group btn-success float-right";
    string buttonType = Model != null ? ((Model.Count() > 0) ? "button" : "submit") : "submit";
}
<div class="tab-pane fade" id="Tasks" role="tabpanel" aria-labelledby="pills-home-tab">

    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">

                <hr />
                @* <div class="row">*@
                <div class="col-lg-12  col-sm-12  pl-5 pr-5">

                    <label for="Human"><h2>Human<i class="fa fa-question-circle" style="font-size:36px;color:Green; cursor:pointer"></i></h2></label>
                    
                    @using (Html.BeginForm("SaveTask", "TrainingFlow", FormMethod.Post))
                    {

                        <div class="form-group purple-border">
                            <label for="Acc_Inspector">Accompanying the Inspector : </label>
                            <textarea class="form-control" id="Acc_Inspector" rows="1"></textarea>
                        </div>

                        <div class="form-group purple-border">
                            <div class="form-group purple-border">
                                <label for="Familiarity">Familiarity : </label>
                                <textarea class="form-control" id="Familiarity" rows="3"></textarea>
                            </div>

                            <div class="form-group purple-border">
                                <label for="Demonstration">Demonstration</label>
                                <textarea class="form-control" id="Demonstration" rows="3"></textarea>
                            </div>

                            <div class="form-group purple-border">
                                <label for="Interview">Interview</label>
                                <textarea class="form-control" id="Interview" rows="3"></textarea>
                            </div>
                            <button class="@trainingAttended" type="@buttonType">
                                <i class="fa fa-check-square fa-4x" style="font-size:48px; cursor:pointer"></i>
                                @* <button type="button" class="btn btn-success btn-lg btn3d"><span class="glyphicon glyphicon-ok"></span></button>
                            *@
                            </button>

                        </div>
                    }
                </div>
                @* </div>
                *@
            </div>
        </div>

    </div>
</div>