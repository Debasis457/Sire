@model Sire.Data.Dto.Question.QuestionDto

<div class="tab-pane fade show active" id="CheckList" role="tabpanel" aria-labelledby="pills-home-tab">

    <input type="hidden" id="id" name="REW_ID" value="-1" class="form-control" />

    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">

                <div class="col-lg-12  col-sm-12  pl-5 pr-5">
                    <lable for="Hint"><h2>Hint<i class="fa fa-lightbulb-o" style="font-size:36px;color:blue"></i></h2></lable>
                    
                    <div class="form-group">
                        <div class="card-header bg-secondary text-white" id="Check">
                        <label class="checkbox-bootstrap checkbox-lg">
                            <input type="checkbox" name="Check" value="@Model.Checklist">
                            <span class="checkbox-placeholder"></span>
                                @Model.Checklist
                        </label>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>
