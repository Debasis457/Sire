@model IEnumerable<Sire.Data.Dto.Master.User_VesselDto>
@{
    ViewBag.Title = "UserVessel";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
    int i = 0;
}


<div class="row fix-head">
    <div class="col-md-12">
        <div class="card m-b-0">
            <div class="card-body head-tit">
                <div class="col-sm-5">
                    <h5 class="head-tit-fnt">User Vessel List</h5>
                </div>
                <div class="col-sm-7 pt-2">
                    <a class="btn btn-primary float-right" asp-action="AddEdit">Create New</a>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Navigation Fixed Bar-->
<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.Raw(@ViewBag.Alert)
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="example1">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 158px;">
                                        User
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 222px;">
                                       Vessel
                                    </th>


                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 155px;">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var satus = item.IsDeleted == false ? "Active" : "Deactive";
                                    <tr>
                                        <td>
                                            @item.User.UserName
                                        </td>
                                        <td>
                                            @item.Vessel.Name
                                        </td>


                                        <td>
                                            <a class="btn btn-success" asp-action="AddEdit" asp-route-Id="@item.Id" style="padding:4px;font-size:9px;" title="Edit"><i class="fa fa-fw fa-edit"></i></a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id" style="padding:4px;font-size:9px;" title="delete" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fas fa-trash-alt"></i></a>

                                        </td>
                                    </tr>

                                    i = i + 1;
                                }
                            </tbody>
                        </table>
                        
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<script src="~/assets/lib/jquery/jquery.js"></script>
<script>
    $(document).ready(function () {
        $('#example1').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            "order": [[0, "desc"]]
        });
    });
</script>
<script src="~/js/pagescript/common.js"></script>
