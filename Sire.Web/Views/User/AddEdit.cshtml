@using Sire.Data.Dto.UserMgt
@model Sire.Data.Dto.UserMgt.UserDto
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
@Html.HiddenFor(Model => Model.Id)
<script src="~/assets/lib/jquery/jquery-3.3.1.min.js"></script>
<script src="~/js/pagescript/user.js"></script>
<div class="row fix-head">
        <div class="col-md-12">
            <div class="card m-b-0">
                <div class="card-body head-tit">
                    <div class="col-sm-5">
                        <h5 class="head-tit-fnt">Add User </h5>
                    </div>
                    <div class="col-sm-7 pt-2">
                       </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Navigation Fixed Bar-->
<div class="tab-pane fade show active" id="User" role="tabpanel" aria-labelledby="pills-home-tab">
    <!-- End Navigation Fixed Bar-->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                 <br />
                  <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.Raw(@ViewBag.Alert)
                    </div>
                </div>
            </div>
               @* @Html.ValidationSummary(true)*@
                  <form asp-action="AddEdit">
                    <hr>
                    @if (@ViewBag.IsEdit)
                    {
                        <input type="hidden" asp-for="Id" />
                        
                    }
                   <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="UserType">UserType</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                       
                        <select asp-for="UserType" asp-items="Html.GetEnumSelectList<User_Types>()" class="form-control select2">
                            <option selected="selected" value="">Select</option>
                        </select>

                    </div>
                      <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="UserName">User Name</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="text" asp-for="UserName" class="form-control inp" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                       
                    </div>
                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Vessel_Id">Vessel Name</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        @Html.DropDownList("Vessel_Id",new SelectList(ViewBag.Vessel, "Id", "Value"),"--Select--" ,new { @class = "form-control select2"} )
                   
           
              </div>
              <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="VesselIMo">Vessel IMO Number</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="text" id="Status" asp-for="VesselIMo" class="form-control inp"  style="font-weight:bold; font-size:15px;" readonly/>
                       

                    </div>
                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="UserId">User Id</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="text" asp-for="UserID" class="form-control inp" />
                       
                    </div>

                   
                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="EmailId">Email Id</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="text" asp-for="EmailId" class="form-control inp" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                       
                    </div>
                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="MobileNo">Mobile No</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="text" asp-for="MobileNo" class="form-control inp" />
                       @* <span asp-validation-for="MobileNo" class="text-danger"></span>*@
                       @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class="text-danger" })
                    </div>
                     <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable">Rank Name</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                     
                        @Html.DropDownList("Rank_Id",new SelectList(ViewBag.Rank, "Id", "Value"),"Select" , new { @class = "form-control select2"})
                        <span asp-validation-for="Rank_Id" class="text-danger"></span>

                    </div>
                     <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Rank_Group_Id">Rank Group Name</label>
                    </div> 
                    <div class="col-sm-2 pr-4 h-40">
                    @Html.DropDownList("Rank_Group_Id",new SelectList(ViewBag.RankGroup, "Id", "Value"),"Select" , new { @class = "form-control select2"})
                        <span asp-validation-for="Rank_Group_Id" class="text-danger"></span>
                    </div>

                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Password">Password</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="password" asp-for="Password" class="form-control inp" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" asp-for="ConfirmPassword">Confirm Password</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="password" asp-for="ConfirmPassword" class="form-control inp" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>


                    @*  <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="is_admin">Is Admin</label>
                        
                    </div>

                      <div class="col-sm-2 pr-4 h-40">
                    
                        <label class="switch">
                            <input class="switch-input" id="is_admin" type="checkbox" value="is_admin"  />
                            <span class="switch-label" data-on="Yes" data-off="No"></span>
                            <span class="switch-handle"></span>
                        </label>

                    </div>
                   *@

                    <div class="col-sm-7 pt-2">
                        <button type="submit" class="n-btn  btn-primary" id="btnSubmitOpt" onclick="return setMd5Password('Password', 'ConfirmPassword');">Submit</button>
                                        <a class="n-btn btn-danger" asp-action="Index">Back</a>
                       <input type="reset" name="Clear" value="Clear" class="n-btn btn-warning" />
                    </div>
                    
                </form>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
