@model Sire.Data.Dto.Inspection.InspectionDto

@{
    ViewBag.Title = "Inspection";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<div class="tab-pane fade show active" id="User" role="tabpanel" aria-labelledby="pills-home-tab">
    <!-- End Navigation Fixed Bar-->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @*<h5 class="head-tit-fnt">Add User</h5>*@


                <form asp-action="AddInspection">
                    <hr>
                    @if (@ViewBag.IsEdit)
                    {
                        <input type="hidden" asp-for="Id" />
                    }


                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Operator_Id">Operator Name</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">

                        @Html.DropDownList("Operator_Id",new SelectList(ViewBag.Operator_Id, "Id", "Value"),"--Select--" ,new { @class = "form-control select2"} )


                    </div>
                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Vessel_Id">Vessel Name</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">

                        <select class="form-control select2" asp-for="Vessel_Id"
                                asp-items="@(new SelectList(String.Empty ,"Vessel_Id", "Name"))">
                            <option>Select Vessel</option>
                        </select>



                        <span asp-validation-for="@Model.Vessel_Id" class="text-danger"></span>
                    </div>


                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Description ">Description</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="text" asp-for="Description" class="form-control inp" />
                    </div>
                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Started_At ">Started AT</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="date" asp-for="Started_At" class="form-control inp" />
                    </div>

                    <div class="col-sm-2 pr-0 h-40">
                        <label class="fnt-lable" for="Completed_At ">Completed AT</label>
                    </div>
                    <div class="col-sm-2 pr-4 h-40">
                        <input type="date" asp-for="Completed_At" class="form-control inp" />
                    </div>

                    <div class="col-sm-7 pt-2">
                        <button type="submit" class="n-btn  btn-success" id="btnSubmitOpt">Submit</button>
                        <a class="n-btn btn-danger" asp-action="Index">Back</a>
                        <input type="reset" name="Clear" value="Clear" class="n-btn btn-warning" />
                    </div>
                </form>
            </div>

        </div>
    </div>

</div>


<script src="~/assets/lib/jquery/jquery-3.3.1.min.js"></script>
<script src="~/js/pagescript/training.js"></script>
