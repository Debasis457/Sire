@model IEnumerable<Sire.Data.Dto.Master.QuetionSectionDto>
@{
    ViewData["Title"] = "Index";


    int n = 1;
}

<script src="~/assets/lib/jquery/jquery-3.3.1.min.js"></script>
<script src="~/js/pagescript/training.js"></script>

<div class="tab-pane fade" id="RankBaseQue" asp- role="tabpanel" aria-labelledby="pills-home-tab">
    <div class="col-md-12">
        <div class="card m-b-0">

            <div class="col-sm-2 pr-0 h-40">
                <label class="fnt-lable">Rank Name</label>
            </div>
            <div class="col-sm-4 pr-4 h-40">

                @Html.DropDownList("Rank_Id",new SelectList(ViewBag.Rank, "Id", "Value"),"Select" , new { @class = "form-control select2"})


            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5">
                <div class="">
                    <br />
                    <br />





                    <div id="accordion">
                        @foreach (var item in Model)
                        {
                            <div class="card" style="margin-bottom:5px">
                                <div class="card-header" style="padding: 8px 10px;">
                                    <a class="card-link" data-toggle="collapse" href="#collapse_@n">
                                        <span style="font-weight:500">@n</span>.  @item.Name
                                        <span style="float:right; width: 60px; text-align:center;  border-radius:10px; background: #65adff;color:white;padding: 0px 5px;"> <b>@item.ResTotal / @item.Total</b></span>

                                    </a>
                                </div>
                                <div id="collapse_@n" class="collapse" data-parent="#accordion">
                                    <br />
                                    <br />
                                    <div class="card-body">

                                        @foreach (var child in item.QuetionSubSection)
                                        {
                                            @* <a style="text-decoration:underline; color:blue; cursor:pointer" onclick="GetQuestionBySection(@child.Id)">@child.Name</a> <br />
                                    *@
                                            <div style="    padding: 2px; border: 1px solid;   margin-bottom: 4px;  border-radius: 5px; cursor:pointer">
                                                <a onclick="GetQuestionBySection(@child.Id)">@child.Name</a>
                                                <span style="float:right;text-align:center; width: 60px;   border-radius:10px; background: #65adff;color:white;padding: 0px 5px;"> <b>@child.ResTotal / @child.Total</b></span>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                            n++;
                        }
                    </div>
                </div>

            </div>

            <div class="col-md-7">
                <br />
                <br />
                <div class="bindPartialQuetion">
                </div>
            </div>
        </div>
    </div>
</div>
